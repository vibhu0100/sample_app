<div align="left">
<% if current_user.picture?%>
<img src="<%=current_user.picture.url%>" class="img-thumbnail" style="width:150px; height:150px">
<% else%>
<%= link_to gravatar_for(current_user), current_user %>
<%end%>
<h1><a href="<%= current_user%>"><%= current_user.name %></a></h1>

<span><%= pluralize(current_user.microposts.count, "micropost") %></span>
</div>